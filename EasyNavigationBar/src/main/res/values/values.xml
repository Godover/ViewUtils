<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EasyNavigationBar">
        <!--底部导航栏高度-->
        <attr name="Easy_navigationHeight" format="dimension" />
        <!--底部导航栏背景-->
        <attr name="Easy_navigationBackground" format="color" />
        <!--Tab字体大小-->
        <attr name="Easy_tabTextSize" format="dimension" />
        <!--Tab文字距Tab图标的距离-->
        <attr name="Easy_tabTextTop" format="dimension" />
        <!--Tab图标大小-->
        <attr name="Easy_tabIconSize" format="dimension" />
        <!--Tab未选中字体颜色-->
        <attr name="Easy_tabNormalColor" format="color" />
        <!--Tab选中字体颜色-->
        <attr name="Easy_tabSelectColor" format="color" />
        <!--提示红点的大小-->
        <attr name="Easy_hintPointSize" format="dimension" />
        <!--消息红点的大小-->
        <attr name="Easy_msgPointSize" format="dimension" />
        <!--提示红点距Tab图标的距离-->
        <attr name="Easy_hintPointLeft" format="dimension" />
        <!--消息红点距Tab图标的距离-->
        <attr name="Easy_msgPointLeft" format="dimension" />
        <!--提示红点距离顶部的距离-->
        <attr name="Easy_hintPointTop" format="dimension" />
        <!--消息红点距顶部的距离-->
        <attr name="Easy_msgPointTop" format="dimension" />
        <!--消息红点数字字体大小-->
        <attr name="Easy_msgPointTextSize" format="dimension" />

        <!--消息红点99+的长度-->
        <attr name="Easy_msgPointMoreWidth" format="dimension" />
        <!--消息红点99+的高度-->
        <attr name="Easy_msgPointMoreHeight" format="dimension" />
        <!--消息红点99+的半径-->
        <attr name="Easy_msgPointMoreRadius" format="integer" />
        <!--消息红点的颜色-->
        <attr name="Easy_msgPointColor" format="color" />


        <!--分割线高度-->
        <attr name="Easy_lineHeight" format="dimension" />
        <!--分割线颜色-->
        <attr name="Easy_lineColor" format="color" />

        <!--是否有paddingBottom-->
        <attr name="Easy_hasPadding" format="boolean" />


        <!--中间图片的大小-->
        <attr name="Easy_centerIconSize" format="dimension" />
        <!--底部导航栏和加号的高度  加号会居中-->
        <attr name="Easy_centerLayoutHeight" format="dimension" />
        <!--添加按钮距离底部的距离-->
        <attr name="Easy_centerLayoutBottomMargin" format="dimension" />
        <!--图标显示-->
        <attr name="Easy_scaleType">
            <flag name="CENTER_INSIDE" value="0" />
            <flag name="CENTER_CROP" value="1" />
            <flag name="CENTER" value="2" />
            <flag name="FIT_CENTER" value="3" />
            <flag name="FIT_END" value="4" />
            <flag name="FIT_START" value="5" />
            <flag name="FIT_XY" value="6" />
            <flag name="MATRIX" value="7" />
        </attr>


        <!--图标显示-->
        <attr name="Easy_centerLayoutRule">
            <flag name="RULE_CENTER" value="0" />
            <flag name="RULE_BOTTOM" value="1" />
        </attr>
        <!-- true 点击加号切换fragment
         false 点击加号不切换fragment进行其他操作（跳转界面等）-->
        <attr name="Easy_centerAsFragment" format="boolean" />
        <attr name="Easy_centerSelectTextColor" format="color" />
        <attr name="Easy_centerNormalTextColor" format="color" />
        <attr name="Easy_centerTextSize" format="dimension" />
        <!--加号文字距离顶部加号的距离-->
        <attr name="Easy_centerTextTopMargin" format="dimension" />
        <!--是否和其他tab文字底部对齐-->
        <attr name="Easy_centerAlignBottom" format="dimension" />
        <!--文字大小单位DP还是SP-->
        <attr name="Easy_textSizeType">
            <flag name="TYPE_DP" value="1" />
            <flag name="TYPE_SP" value="2" />
        </attr>


    </declare-styleable>
    <item name="tag_view_position" type="id" />
    <string name="app_name" translatable="false">EasyNavigation</string>


    <attr name="smContentBackground" format="reference|color" />
    <attr name="smDescText" format="reference|color" />
    <attr name="smIdentText" format="reference|color" />
    <attr name="smToolbar" format="reference|color" />
    <attr name="smToolbarShareText" format="reference|color" />
    <attr name="smToolbarText" format="reference|color" />
    <color name="dark_colorPrimaryDark">#465a64</color>
    <color name="dark_smContentBackground">#ffffff</color>
    <color name="dark_smDescText">#617d8a</color>
    <color name="dark_smIdentText">#000000</color>
    <color name="dark_smToolbar">#617d8a</color>
    <color name="dark_smToolbarShareText">#ffffff</color>
    <color name="dark_smToolbarText">#ffffff</color>
    <color name="light_colorPrimaryDark">#af0839</color>
    <color name="light_smContentBackground">#ffffff</color>
    <color name="light_smDescText">#e71e62</color>
    <color name="light_smIdentText">#cbcbcb</color>
    <color name="light_smToolbar">#e71e62</color>
    <color name="light_smToolbarShareText">#ffffff</color>
    <color name="light_smToolbarText">#ffffff</color>
    <dimen name="simple_text_item_size">18sp</dimen>
    <string name="simpleAllInfo">全部信息: </string>
    <string name="simpleAppName">SpiderMan</string>
    <string name="simpleBrand">设备厂商: </string>
    <string name="simpleClassName">类名: </string>
    <string name="simpleCopied">拷贝成功</string>
    <string name="simpleCopyText">拷贝文本</string>
    <string name="simpleCpuAbi">CPU-ABI: </string>
    <string name="simpleCrashInfo">崩溃信息: </string>
    <string name="simpleExceptionType">类型: </string>
    <string name="simpleFunName">方法: </string>
    <string name="simpleImageNotExist">图片文件不存在</string>
    <string name="simpleLineNum">行数: </string>
    <string name="simpleModel">设备名称: </string>
    <string name="simpleNoSdCard">未插入sd卡</string>
    <string name="simplePermissionSd">请授予SD卡权限才能分享图片</string>
    <string name="simpleShare">分享</string>
    <string name="simpleShareImage">分享长图</string>
    <string name="simpleShareText">分享文本</string>
    <string name="simpleShareTo">分享到: </string>
    <string name="simpleTime">时间: </string>
    <string name="simpleTitle">崩溃信息展示</string>
    <string name="simpleVersion">系统版本: </string>

    <style name="SpiderManTheme.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/dark_colorPrimaryDark</item>
        <item name="smToolbar">@color/dark_smToolbar</item>
        <item name="smToolbarText">@color/dark_smToolbarText</item>
        <item name="smToolbarShareText">@color/dark_smToolbarShareText</item>
        <item name="smContentBackground">@color/dark_smContentBackground</item>
        <item name="smIdentText">@color/dark_smIdentText</item>
        <item name="smDescText">@color/dark_smDescText</item>
    </style>

    <style name="SpiderManTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/light_colorPrimaryDark</item>
        <item name="smToolbar">@color/light_smToolbar</item>
        <item name="smToolbarText">@color/light_smToolbarText</item>
        <item name="smToolbarShareText">@color/light_smToolbarShareText</item>
        <item name="smContentBackground">@color/light_smContentBackground</item>
        <item name="smIdentText">@color/light_smIdentText</item>
        <item name="smDescText">@color/light_smDescText</item>
    </style>

</resources>